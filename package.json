{
  "name": "kotone",
  "version": "1.0.0",
  "description": "Transform string to UTF-8 by Rust",
  "keywords": [
    "string",
    "rust",
    "utf-8",
    "transform",
    "tramsform-to-utf-8",
    "encode",
    "decode"
  ],
  "homepage": "https://github.com/xn-sakina/kotone#README",
  "repository": {
    "type": "git",
    "url": "https://github.com/xn-sakina/kotone"
  },
  "license": "MIT",
  "author": "fz6m",
  "main": "binding.js",
  "types": "index.d.ts",
  "files": [
    "index.d.ts",
    "binding.js"
  ],
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --platform --js binding.js --release -o .",
    "build:dev": "napi build --platform --js binding.js -o .",
    "format:ts": "prettier --cache --parser typescript --write'src/**/*.ts'",
    "format": "cargo fmt",
    "prepublishOnly": "pnpm build",
    "push": "vary push",
    "release:only": "vary release:only",
    "release": "vary np",
    "release:root": "vary np --root",
    "test": "vitest --run",
    "vp": "vary vp"
  },
  "packageManager": "pnpm@9.2.0",
  "devDependencies": {
    "@changesets/cli": "^2.27.5",
    "@napi-rs/cli": "3.0.0-alpha.55",
    "@types/node": "^20.14.6",
    "@xn-sakina/vary": "^1.4.0",
    "bochi": "^5.0.0",
    "kotone": "workspace:*",
    "prettier": "^3.3.2",
    "tsx": "^4.15.6",
    "typescript": "5.5.1-rc",
    "vitest": "^1.6.0",
    "zx": "^8.1.3"
  },
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "access": "public"
  },
  "napi": {
    "binaryName": "kotone",
    "packageName": "@xn-sakina/kotone",
    "targets": [
      "x86_64-apple-darwin",
      "aarch64-apple-darwin",
      "x86_64-pc-windows-msvc",
      "aarch64-pc-windows-msvc",
      "x86_64-unknown-linux-gnu",
      "aarch64-unknown-linux-gnu",
      "x86_64-unknown-linux-musl",
      "aarch64-unknown-linux-musl"
    ]
  }
}
